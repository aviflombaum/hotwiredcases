<div class="max-w-xl mx-auto">
  <span class="text-sm italic text-yellow-500">click on the description text to edit</span>
  <div class="flex justify-between mt-6 text-xl font-medium text-gray-900">
    <span><%= @product.name %></span>
    <span>$<%= @product.price %></span>
  </div>
  <div class="mt-5">
    <span class="text-gray-900 font-base">Description</span>
    <span class="block mt-2 text-gray-500">
      <%= turbo_frame_tag :product_description do %>
        <%= link_to edit_e1_product_description_path(@product), class: "cursor-text" do %>
          <%= @product.description || 'No description' %>
        <% end %>
      <% end %>
    </span>
  </div>
</div>
